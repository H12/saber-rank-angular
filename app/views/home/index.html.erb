<div class="container-fluid" ng-app="saberRank">
  <div ng-controller="BattersController">
    <div id="available">
      <select multiple class="form-control">
        <option ng-repeat="stat in stats">{{stat}}</option>
      </select>
    </div>
    <div id="buttons">
      <button type="button" class="btn btn-success" ng-click="addOptions(); sortStatOptions('#selected')">></button>
      <button type="button" class="btn btn-danger" ng-click="removeOptions(); sortStatOptions('#available')"><</button>
      <button type="button" class="btn btn-primary" ng-click="updateBatters()">âœ“</button>
    </div>
    <div id="selected">
      <select multiple class="form-control"></select>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th ng-repeat="(key, value) in batters[0]">
            <a href="#" ng-click="changeSortDesc(key); changeSortType(key)">
              {{ key | uppercase }}
              <span ng-show="sortType == '{{key}}' && !sortDesc" class="fa fa-caret-down"></span>
              <span ng-show="sortType == '{{key}}' && sortDesc" class="fa fa-caret-up"></span>
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="batter in batters | orderBy:sortType:sortDesc">
          <td ng-repeat="(key, value) in batter">{{ value }}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>