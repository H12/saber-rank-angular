<div class="container-fluid" ng-app="saberRank">
  <div ng-controller="BattersController">
    <div id="stat-select">
      <div id="available">
        <select multiple class="form-control">
          <option ng-repeat="stat in stats">{{stat}}</option>
        </select>
      </div>
      <div id="buttons">
        <button type="button" class="btn btn-success" ng-click="addOptions(); sortStatOptions('#selected')">
          <span class="fa fa-arrow-right"></span>
        </button>
        <button type="button" class="btn btn-danger" ng-click="removeOptions(); sortStatOptions('#available')">
          <span class="fa fa-arrow-left"></span>
        </button>
        <button type="button" class="btn btn-primary" ng-click="updateBatters()">
          <span class="fa fa-check"></span>
        </button>
      </div>
      <div id="selected">
        <select multiple class="form-control"></select>
      </div>
    </div>
    <div id="slider-container">
      <span>50 PA</span> <input id="playtime" ng-init="setSlider()" data-slider-id="playtimeSlider" type="text" data-slider-min="50" data-slider-max="700" data-slider-step="50" data-slider-value="500"/> <span>700 PA</span>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th ng-repeat="(key, value) in batters[0]">
            <a href="#" ng-click="changeSortDesc(key); changeSortType(key)">
              {{ key | uppercase }}
              <span ng-show="sortType == '{{key}}' && !sortDesc" class="fa fa-w fa-sort-up"></span>
              <span ng-show="sortType == '{{key}}' && sortDesc" class="fa fa-w fa-sort-down"></span>
              <span ng-hide="sortType == '{{key}}'" class="fa fa-w fa-sort"></span>
            </a>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="batter in batters | orderBy:sortType:sortDesc">
          <td ng-repeat="(key, value) in batter">{{ value }}</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>